<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.imeprojet">

    <!-- Masquer les notifications et interdire la mise en veille -->
    <uses-permission android:name="android.permission.EXPAND_STATUS_BAR"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <!-- Appareil photo -->
    <uses-permission android:name="android.permission.CAMERA"/>
    <!-- Stockage -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DateActivity"></activity>
        <activity android:name=".MomentActivity"></activity>
        <activity android:name=".Settings"></activity>
        <activity android:name=".TwoWeeksActivity"></activity>
        <activity android:name=".MonthActivity"></activity>

    </application>

</manifest>