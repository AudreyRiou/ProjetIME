<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="15dip" >

    <TextView
        android:id="@+id/TextView_boite_saisie_mdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Entrer l'ancien mot de passe" />

    <EditText
        android:id="@+id/EditText_boite_saisie_mdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mot de passe..."
        android:singleLine="true" />

    <TextView
        android:id="@+id/TextView_boite_saisie_newmdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Entrer le nouveau mot de passe" />

    <EditText
        android:id="@+id/EditText_boite_saisie_newmdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nouveau mot de passe..."
        android:singleLine="true" />

    <TextView
        android:id="@+id/TextView_boite_confirmation_newmdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Confirmer le nouveau mot de passe" />

    <EditText
        android:id="@+id/EditText_boite_confirmation_newmdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirmation du nouveau mot de passe..."
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp" >

        <Button
            android:id="@+id/bouton_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.55"
            android:text="OK" />

        <Button
            android:id="@+id/bouton_annuler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:text="Annuler" />

    </LinearLayout>

</LinearLayout>